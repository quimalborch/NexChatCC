// Define database connection - URL is now in prisma.config.ts for Prisma 7
generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Chats {
  id Int @id @default(autoincrement())
  name String
  url String
  secret_key String
  createdAt DateTime @default(now())
}